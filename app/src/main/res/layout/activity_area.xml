<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.area.AreaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/area_lable_holder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/area_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/area_labale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/area_lable"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Space
        android:id="@+id/space_after_area_lable"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_lable_holder" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_unit_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space_after_area_lable"

        >

        <TextView
            android:id="@+id/first_unit_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:drawableRight="@drawable/ic_drop_down"
            android:gravity="center_vertical"
            android:text="km2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/value_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:padding="2dp"
            android:text="1"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/first_unit_drop_down"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Square kilometer"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/value_unit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Space
        android:id="@+id/space_after_first_unit_holder"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_unit_holder" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second_unit_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space_after_first_unit_holder"

        >

        <TextView
            android:id="@+id/second_unit_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:drawableRight="@drawable/ic_drop_down"
            android:gravity="center_vertical"
            android:text="km2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/value_unit_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:padding="2dp"
            android:text="1"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/second_unit_drop_down"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_unit_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Square kilometer"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/value_unit_second" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Space
        android:id="@+id/space_after_second_unit"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/second_unit_holder"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/space_after_second_unit"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#8A8686"
        />

    <GridLayout
        android:id="@+id/area_grid_container"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/area_clear_holder"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/figures_seven_normal"
            style="@style/btn_operation_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/figures_eight_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            style="@style/btn_operation_styles"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/figures_nine_normal"
            style="@style/btn_operation_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="9"
            android:textSize="25sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/figures_four_normal"
            style="@style/btn_operation_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/figures_five_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            style="@style/btn_operation_styles"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/figures_six_normal"
            style="@style/btn_operation_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="6"
            android:textSize="25sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/figures_one_normal"
            style="@style/btn_operation_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/figures_two_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            style="@style/btn_operation_styles"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/figures_three_normal"
            style="@style/btn_operation_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="3"
            android:textSize="25sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            style="@style/btn_operation_styles"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/figures_zero_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            style="@style/btn_operation_styles"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/figures_dot_normal"
            style="@style/btn_operation_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="."
            android:textSize="25sp"
            android:textColor="@color/black" />
    </GridLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/area_clear_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/area_grid_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintStart_toEndOf="@id/area_grid_container"
        app:layout_constraintTop_toTopOf="@id/area_grid_container"
        android:padding="5dp"
        >


        <TextView
            android:id="@+id/area_clear_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/space_between_removal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_weight="1"
            android:text="AC"
            android:textSize="25sp"
            android:textColor="@color/purple_500"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/back_for_two_deletion"
            />

        <Space
            android:id="@+id/space_between_removal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="0.2"
            app:layout_constraintTop_toBottomOf="@+id/area_clear_btn"
            app:layout_constraintBottom_toTopOf="@+id/area_remove_btn"/>


        <ImageView
            android:id="@+id/area_remove_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/space_between_removal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_backspace_24"
            android:padding="15dp"
            android:background="@drawable/back_for_two_deletion"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>