<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_styles">
        <item name="android:padding">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_operation_styles">
        <item name="android:padding">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">start|center_horizontal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="extraCalculationStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#A9A9A7</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="extra_btns_style">
        <item name="android:visibility">visible</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
    </style>


    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

</resources>