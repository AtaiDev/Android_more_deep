<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/backgr_item_menu"
    android:padding="10dp"
    android:paddingEnd="20dp"
    android:elevation="30dp"
    android:paddingStart="25dp"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <ImageView
        android:id="@+id/history_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_history"
        app:layout_constraintTop_toTopOf="@+id/history_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/history_text"
        />

    <TextView
        android:id="@+id/history_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/history_icon"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_below="@+id/history_text"
        android:src="@drawable/ic_info"
        app:layout_constraintTop_toTopOf="@id/about_text"
        app:layout_constraintBottom_toBottomOf="@+id/about_text"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/about_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/history_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_text"
        app:layout_constraintLeft_toRightOf="@+id/about_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>